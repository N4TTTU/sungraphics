---
// GalleryBlock.astro (o dentro de tu página)

const images = [
    { src: "/img/servicios/Letrero.webp", alt: "Proyecto 1" },
    { src: "/img/servicios/Publicidad.webp", alt: "Proyecto 2" },
    { src: "/img/servicios/LetrerosVolumetricos.webp", alt: "Proyecto 3" },
    { src: "/img/servicios/Cuadernos.webp", alt: "Proyecto 4" },
    { src: "/img/servicios/Suculentas.webp", alt: "Proyecto 5" },
    { src: "/img/servicios/GrabadoMadera.webp", alt: "Proyecto 6" },
    { src: "/img/servicios/LetrasVolumetricas.webp", alt: "Proyecto 7" },
    { src: "/img/servicios/Senaleticas.webp", alt: "Proyecto 8" },
    { src: "/img/servicios/OneWay.webp", alt: "Proyecto 9" },
];
---

<section class="bg-white py-10">
    <div class="mx-auto max-w-6xl px-4">
        <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 sm:gap-6">
            {
                images.map((img) => (
                    <a
                        href={img.src}
                        class="group relative block overflow-hidden rounded-md bg-gray-100"
                        aria-label={img.alt}
                    >
                        <img
                            src={img.src}
                            alt={img.alt}
                            loading="lazy"
                            class="h-32 w-full object-cover transition-transform duration-300 ease-out group-hover:scale-[1.08] sm:h-40 md:h-48"
                        />
                        {/* opcional: overlay suave */}
                        <div class="pointer-events-none absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100 bg-black/5" />
                    </a>
                ))
            }
        </div>

        <div class="mt-8 flex justify-center">
            <a
                href="/galeria"
                class="inline-flex items-center justify-center rounded-md bg-orange-500 px-6 py-2.5 text-sm font-semibold text-white transition hover:bg-orange-600 focus:outline-none focus:ring-2 focus:ring-orange-400 focus:ring-offset-2"
            >
                VER MÁS
            </a>
        </div>
    </div>
</section>
