---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
    <div class="max-w-3xl flex flex-col mx-auto size-full">
        <main id="content">
            <div class="text-center py-10 px-4 sm:px-6 lg:px-8">
                <h1 class="text-6xl text-[#515151]">
                    OPS
                    <span class="text-[#FD9800]">!</span>
                </h1>

                <h1
                    class="block text-8xl pt-10 font-bold text-[#515151] sm:text-9xl"
                >
                    ERROR
                </h1>
                <h1
                    class="block text-8xl pb-10 font-bold text-[#515151] sm:text-9xl"
                >
                    404
                </h1>
                <p class="mt-3 text-[#515151]">Algo salió mal.</p>
                <p class="text-[#515151]">
                    Lo sentimos, no pudimos encontrar tu página.
                </p>
                <div
                    class="mt-5 flex flex-col pt-10 justify-center items-center gap-2 sm:flex-row sm:gap-3"
                >
                    <a
                        class="sm:w-auto py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-[#FD9800] text-white hover:bg-[#e68a00] focus:outline-hidden focus:bg-[#e68a00] disabled:opacity-50 disabled:pointer-events-none"
                        href="https://sungraphics.cl/"
                    >
                        <svg
                            class="shrink-0 size-4"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path d="m15 18-6-6 6-6"></path></svg
                        >
                        Volver a inicio
                    </a>
                </div>
            </div>
        </main>
    </div>
</Layout>
