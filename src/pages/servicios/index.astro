---
import Layout from "@/layouts/Layout.astro";
import type { Servicio } from "@/assets/data/servicios";
import { servicios } from "@/assets/data/servicios";
---

<Layout>
    <section class="mx-auto max-w-7xl px-4 py-12">
        <h1 class="text-3xl font-bold text-gray-900 mb-10 text-center">
            Nuestros Servicios
        </h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            {
                servicios.map((s: Servicio) => {
                    const portada =
                        s.imagenPrincipal ??
                        s.galeria?.[0] ??
                        "/img/placeholder.jpg";
                    return (
                        <article class="group relative rounded-xl overflow-hidden bg-white border shadow-sm hover:shadow-md transition-all">
                            <img
                                src={portada}
                                alt={s.titulo}
                                class="h-64 w-full object-cover transition-transform duration-300 group-hover:scale-105"
                                loading="lazy"
                            />
                            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 to-transparent p-4">
                                <h2 class="text-lg font-semibold text-white">
                                    {s.titulo}
                                </h2>
                                {s.categoria && (
                                    <p class="text-sm text-gray-200">
                                        {s.categoria}
                                    </p>
                                )}
                            </div>
                            <a
                                href={`/servicios/${s.slug}`}
                                class="absolute inset-0"
                                aria-label={`Ver servicio ${s.titulo}`}
                            />
                        </article>
                    );
                })
            }
        </div>
    </section>
</Layout> 
