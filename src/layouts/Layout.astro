---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
import AOS from "aos";
import "aos/dist/aos.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<style>
			@import url("https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Blinker:wght@300;400;700&family=Lato:wght@300;400;700&display=swap");
		</style>
		<title>Sungraphics</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
	<!-- AOS Animation -->
	<script>
		import AOS from "aos";

		function initAOS() {
			AOS.init({
				once: true,
				duration: 800,
				easing: "ease-in-out",
			});
		}

		// Primera carga
		document.addEventListener("DOMContentLoaded", initAOS);

		// Cuando Astro cambia de pÃ¡gina
		document.addEventListener("astro:page-load", () => {
			AOS.refreshHard();
		});
	</script>

	<script>
		if (typeof window !== "undefined") {
			import("preline");
		}
	</script>
</html>

<style is:global>
	@keyframes marquee {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-50%);
		}
	}

	html,
	body {
		width: 100%;
		overflow-x: hidden;
	}

	body {
		font-family: "Blinker", "Bebas Neue", "Lato", sans-serif;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	h1 {
		font-weight: bold;
		font-style: normal;
		font-display: swap;
	}

	h2,
	h3,
	h4,
	h5,
	h6 {
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	.tx-xxl {
		font-size: 70px;
	}

	.tx-xl {
		font-size: 50px;
	}
	.tx-l {
		font-size: 35px;
	}

	.tx-m {
		font-size: 28px;
	}

	.tx-s {
		font-size: 22px;
	}

	.tx-sm {
		font-size: 18px;
	}

	.tx-enun {
		font-size: 60px;
		font-family: "Bebas Neue", sans-serif;
	}

	.tx-enun-sm {
		font-size: 40px;
		font-family: "Bebas Neue", sans-serif;
	}

	textarea:focus {
		outline: none;
		border: 1px solid #fd9800;
		box-shadow: none;
	}

	input:focus {
		outline: none;
		border: 1px solid #fd9800;
		box-shadow: none;
	}

	.ff-bebas {
		font-family: "Bebas Neue", sans-serif;
	}

	.ff-blinker {
		font-family: "Blinker", sans-serif;
	}

	.ff-blinker-bold {
		font-family: "Blinker", sans-serif;
		font-weight: 700;
	}

	#underline-animation {
		position: relative;
		display: inline-block;
	}

	#underline-animation::after {
		content: "";
		display: block;
		width: 100%;
		height: 6px;
		background-color: #fff;
	}

	.variant-btn,
	.color-btn {
		color: #515151;
		background-color: #ffffff;
	}

	/* Hover */
	.variant-btn:hover,
	.color-btn:hover {
		color: #fd9800;
		border-color: #fd9800;
	}

	/* Estado seleccionado (JS ya agrega estas clases) */
	.variant-btn.bg-\[\#FD9800\],
	.color-btn.bg-\[\#FD9800\] {
		background-color: #fd9800 !important;
		color: #ffffff !important;
		border-color: #fd9800 !important;
	}

	/* Asegura que el texto interno NO se pierda */
	.variant-btn span,
	.color-btn span {
		color: inherit;
	}
</style>

