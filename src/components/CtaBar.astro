---
type Props = {
    text?: string;
    buttonText?: string;
    href?: string;
};

const {
    text = "Cuéntanos acerca de tu idea o proyecto",
    buttonText = "¡ESCRÍBENOS AHORA!",
    href = "/contacto",
} = Astro.props;
---

<section class="bg-orange-500 py-10">
    <div class="mx-auto max-w-6xl px-4 py-6">
        <div
            class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between"
        >
            <p class="text-4xl font-semibold text-white">
                {text}
            </p>

            <a
                href={href}
                class="inline-flex w-full items-center justify-center rounded-md border-2 border-white px-6 py-6 text-2xl font-extrabold text-white transition
               hover:bg-white hover:text-orange-500 focus:outline-none focus:ring-2 focus:ring-white/70 focus:ring-offset-2 focus:ring-offset-orange-500
               sm:w-auto"
            >
                {buttonText}
            </a>
        </div>
    </div>
</section>
