---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <!-- Contact Us -->
    <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
        <div class="max-w-2xl lg:max-w-5xl mx-auto">
            <div class="text-center">
                <h1 class="text-6xl font-bold text-gray-800 sm:text-4xl">
                    Hablemos <span class="text-[#Fd9800]">!</span>
                </h1>
                <p class="mt-1 text-gray-600">
                    Convertimos ideas en resultados: diseño, impresión y
                    producción a tu medida.
                </p>
            </div>

            <div class="mt-12 grid items-center lg:grid-cols-2 gap-6 lg:gap-16">
                <!-- Card -->
                <div
                    class="flex flex-col border border-gray-200 rounded-xl p-4 sm:p-6 lg:p-8"
                >
                    <form>
                        <div class="grid gap-4">
                            <!-- Grid -->
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <div>
                                    <label for="nombre-contacto" class="sr-only"
                                        >Nombre</label
                                    >
                                    <input
                                        type="text"
                                        name="nombre-contacto"
                                        id="nombre-contacto"
                                        class="py-2.5 sm:py-3 px-4 block rounded-lg sm:text-sm border border-gray-300 focus:border-[#FD9800] focus:ring-[#FD9800] w-full p-2 disabled:opacity-50 disabled:pointer-events-none"
                                        placeholder="Nombre"
                                    />
                                </div>

                                <div>
                                    <label
                                        for="apellido-contacto"
                                        class="sr-only">Apellido</label
                                    >
                                    <input
                                        type="text"
                                        name="apellido-contacto"
                                        id="apellido-contacto"
                                        class="py-2.5 sm:py-3 px-4 block rounded-lg sm:text-sm border border-gray-300 focus:border-[#FD9800] focus:ring-[#FD9800] w-full p-2 disabled:opacity-50 disabled:pointer-events-none"
                                        placeholder="Apellido"
                                    />
                                </div>
                            </div>
                            <!-- End Grid -->

                            <div>
                                <label for="email-contacto" class="sr-only"
                                    >Correo</label
                                >
                                <input
                                    type="email"
                                    name="email-contacto"
                                    id="email-contacto"
                                    autocomplete="email"
                                    class="py-2.5 sm:py-3 px-4 block rounded-lg sm:text-sm border border-gray-300 focus:border-[#FD9800] focus:ring-[#FD9800] w-full p-2 disabled:opacity-50 disabled:pointer-events-none"
                                    placeholder="Correo"
                                />
                            </div>

                            <div>
                                <label for="telefono-contacto" class="sr-only"
                                    >Teléfono</label
                                >
                                <input
                                    type="text"
                                    name="telefono-contacto"
                                    id="telefono-contacto"
                                    class="py-2.5 sm:py-3 px-4 block rounded-lg sm:text-sm border border-gray-300 focus:border-[#FD9800] focus:ring-[#FD9800] w-full p-2 disabled:opacity-50 disabled:pointer-events-none"
                                    placeholder="Teléfono"
                                />
                            </div>

                            <div>
                                <label for="detalles-contacto" class="sr-only"
                                    >Detalles</label
                                >
                                <textarea
                                    id="detalles-contacto"
                                    name="detalles-contacto"
                                    rows="4"
                                    class="py-2.5 sm:py-3 px-4 block rounded-lg sm:text-sm border border-gray-300 focus:border-[#FD9800] focus:ring-[#FD9800] w-full p-2 disabled:opacity-50 disabled:pointer-events-none"
                                    placeholder="Escríbenos"></textarea>
                            </div>
                        </div>
                        <!-- End Grid -->

                        <div class="mt-4 grid">
                            <button
                                type="submit"
                                class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-xl font-medium rounded-lg border border-transparent bg-[#FD9800] text-white hover:bg-[#D68A00] focus:outline-hidden focus:bg-[#D68A00] disabled:opacity-50 disabled:pointer-events-none cursor-pointer"
                                >Enviar</button
                            >
                        </div>
                    </form>
                </div>
                <!-- End Card -->

                <div class="divide-y divide-gray-200 hover:cursor-pointer">
                    <!-- Icon Block -->
                    <div class="flex gap-x-7 py-6">
                        <svg
                            class="shrink-0 size-6 mt-1.5 text-gray-800"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M14 9a2 2 0 0 1-2 2H6l-4 4V4c0-1.1.9-2 2-2h8a2 2 0 0 1 2 2v5Z"
                            ></path><path
                                d="M18 9h2a2 2 0 0 1 2 2v11l-4-4h-6a2 2 0 0 1-2-2v-1"
                            ></path></svg
                        >
                        <div class="grow">
                            <h3 class="font-semibold text-xl text-gray-800">
                                Preguntas frecuentes
                            </h3>
                            <p class="mt-1 text-sm text-gray-500">
                                Explora nuestras preguntas frecuentes para
                                resolver tus dudas.
                            </p>
                            <a
                                class="mt-2 inline-flex items-center gap-x-2 text-sm font-medium text-[#656565] hover:text-[#FD9800] focus:outline-hidden focus:text-[#656565]"
                                href="/preguntas-frecuentes"
                            >
                                Ver preguntas frecuentes
                                <svg
                                    class="shrink-0 size-2.5 transition ease-in-out group-hover:translate-x-1 group-focus:translate-x-1"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 16 16"
                                    fill="none"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        clip-rule="evenodd"
                                        d="M0.975821 6.92249C0.43689 6.92249 -3.50468e-07 7.34222 -3.27835e-07 7.85999C-3.05203e-07 8.37775 0.43689 8.79749 0.975821 8.79749L12.7694 8.79748L7.60447 13.7596C7.22339 14.1257 7.22339 14.7193 7.60447 15.0854C7.98555 15.4515 8.60341 15.4515 8.98449 15.0854L15.6427 8.68862C16.1191 8.23098 16.1191 7.48899 15.6427 7.03134L8.98449 0.634573C8.60341 0.268455 7.98555 0.268456 7.60447 0.634573C7.22339 1.00069 7.22339 1.59428 7.60447 1.9604L12.7694 6.92248L0.975821 6.92249Z"
                                        fill="currentColor"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                    <!-- End Icon Block -->

                    <!-- Icon Block -->
                    <div class="flex gap-x-7 py-6 hover:cursor-pointer">
                        <svg
                            class="shrink-0 size-6 mt-1.5 text-gray-800"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path d="m7 11 2-2-2-2"></path><path d="M11 13h4"
                            ></path><rect
                                width="18"
                                height="18"
                                x="3"
                                y="3"
                                rx="2"
                                ry="2"></rect></svg
                        >
                        <div class="grow">
                            <h3 class="font-semibold text-xl text-gray-800">
                                Revisa nuestro catálogo
                            </h3>
                            <p class="mt-1 text-sm text-gray-500">
                                Descubre todos los productos y servicios que
                                ofrecemos: letreros luminosos, corpóreos,
                                señalética y merchandising personalizado.
                            </p>
                            <a
                                class="mt-2 inline-flex items-center gap-x-2 text-sm font-medium text-[#656565] hover:text-[#FD9800] focus:outline-hidden focus:text-[#656565]"
                                href="/catalogo"
                            >
                                Ver catálogo
                                <svg
                                    class="shrink-0 size-2.5 transition ease-in-out group-hover:translate-x-1 group-focus:translate-x-1"
                                    width="16"
                                    height="16"
                                    viewBox="0 0 16 16"
                                    fill="none"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        clip-rule="evenodd"
                                        d="M0.975821 6.92249C0.43689 6.92249 -3.50468e-07 7.34222 -3.27835e-07 7.85999C-3.05203e-07 8.37775 0.43689 8.79749 0.975821 8.79749L12.7694 8.79748L7.60447 13.7596C7.22339 14.1257 7.22339 14.7193 7.60447 15.0854C7.98555 15.4515 8.60341 15.4515 8.98449 15.0854L15.6427 8.68862C16.1191 8.23098 16.1191 7.48899 15.6427 7.03134L8.98449 0.634573C8.60341 0.268455 7.98555 0.268456 7.60447 0.634573C7.22339 1.00069 7.22339 1.59428 7.60447 1.9604L12.7694 6.92248L0.975821 6.92249Z"
                                        fill="currentColor"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                    <!-- End Icon Block -->

                    <!-- Icon Block -->
                    <div class="flex gap-x-7 py-6 hover:cursor-pointer">
                        <svg
                            class="shrink-0 size-6 mt-1.5 text-gray-800"
                            width="24"
                            height="24"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            ><path
                                d="M21.2 8.4c.5.38.8.97.8 1.6v10a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V10a2 2 0 0 1 .8-1.6l8-6a2 2 0 0 1 2.4 0l8 6Z"
                            ></path><path
                                d="m22 10-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 10"
                            ></path></svg
                        >
                        <div class="grow">
                            <h3 class="font-semibold text-xl text-gray-800">
                                Nuestro contacto
                            </h3>
                            <p class="mt-1 text-sm text-gray-500">
                                Si necesita ponerse en contacto con nosotros por
                                correo electrónico
                            </p>
                            <a
                                class="mt-2 inline-flex items-center gap-x-2 text-sm font-medium text-gray-600 hover:text-[#FD9800] focus:outline-hidden focus:text-gray-800"
                                href=""
                            >
                                info@sungraphics.cl
                            </a>
                        </div>
                    </div>
                    <!-- End Icon Block -->
                </div>
            </div>
        </div>
    </div>
    <!-- End Contact Us -->
</Layout>

<style>
    input,
    textarea,
    label {
        font-family: "Blinker", sans-serif;
        font-size: 1rem;
        color: #000;
    }
</style>
